<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#000"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/uimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/logo"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Information"
            android:textSize="24dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginBottom="15dp"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uinfoid"
                    android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Id"
                    android:textColor="#fff"
                    />

                    <TextView
                        android:id="@+id/uinfoname"
                        android:drawableLeft="@drawable/ic_person_pin_black_24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="User Name"
                        android:inputType="textEmailAddress"
                        android:textColor="#fff"

                        />

                    <TextView
                        android:textColor="#fff"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:id="@+id/uinfoemail"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"

                        />

                    <TextView
                        android:textColor="#fff"
                        android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                        android:id="@+id/uinfopassword"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        />

                    <TextView
                        android:textColor="#fff"
                        android:drawableLeft="@drawable/ic_add_location_black_24dp"
                        android:id="@+id/uinfoaddress"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Address"
                        />

                    <TextView
                        android:textColor="#fff"
                        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                        android:id="@+id/uinfomobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        />
                <TextView
                    android:textColor="#fff"
                    android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                    android:id="@+id/uapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account Status"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    />

            </LinearLayout>



        <Button
            android:id="@+id/appr"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Approve"
            android:layout_gravity="center"
            android:background="#14050A"
            android:textColor="#fff"
            android:alpha="0.5"
            style=""
            />
        <Button
            android:id="@+id/del"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_gravity="center"
            android:background="#14050A"
            android:textColor="#fff"
            android:alpha="0.5"

            />






    </LinearLayout>


</LinearLayout>