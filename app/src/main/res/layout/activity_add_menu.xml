<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#000"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/logo"/>
        <TextView

            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Menu"
            android:textSize="24dp"
            android:textStyle="italic"

            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0.5"
            app:cardBackgroundColor="#14050A"
            app:cardElevation="8dp"
            app:cardMaxElevation="15dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:textColorHint="#F0EAEA"
                    android:layout_marginTop="12sp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/fname"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Food Name"
                        android:inputType="textEmailAddress"
                        android:textColor="#fff"
                        android:layout_marginEnd="2dp"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:textColorHint="#F0EAEA"
                    android:layout_marginTop="12sp">
                    <android.support.design.widget.TextInputEditText
                        android:textColor="#fff"

                        android:drawablePadding="15dp"
                        android:id="@+id/fdes"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Food Description "

                        />
                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:textColorHint="#F0EAEA"
                    android:layout_marginTop="12sp">
                    <android.support.design.widget.TextInputEditText
                        android:textColor="#fff"

                        android:id="@+id/fprice"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:drawablePadding="10dp"
                        android:layout_height="wrap_content"
                        android:hint="Food Price"
                        />
                </android.support.design.widget.TextInputLayout>

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:ms_background_color="#000"
                    app:ms_text_color="#fff"
                    android:textSize="12dp"

                />


                <Button
                    android:id="@+id/add"
                    android:layout_marginTop="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_gravity="center"
                    android:background="#14050A"
                    android:textColor="#fff"
                    android:alpha="0.9"

                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>





</android.support.constraint.ConstraintLayout>